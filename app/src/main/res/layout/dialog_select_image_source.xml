<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp" android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <Button
            android:id="@+id/dialog_select_image_source_phone_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add from gallery"/>
        <Button
            android:id="@+id/dialog_select_image_source_web_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Generate from web"/>
        </LinearLayout>
</RelativeLayout>