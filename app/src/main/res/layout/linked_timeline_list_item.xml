<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content" android:clickable="true">
    <view
        android:id="@+id/linked_timeline_list_item_color"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:padding="8dp"/>
    <TextView
        android:layout_toRightOf="@id/linked_timeline_list_item_color"
        android:id="@+id/linked_timeline_list_item_title"
        android:layout_centerVertical="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</RelativeLayout>