<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_container"
    android:layout_gravity="center"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="0dp"
    android:layout_marginLeft="35dp"
    android:layout_marginRight="35dp"
    android:layout_marginBottom="10dp">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/card_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/timeline_thumbnail"
                android:layout_width="match_parent"
                android:minHeight="100dp"
                android:maxHeight="300dp"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop" />

            <View
                android:layout_below="@id/timeline_thumbnail"
                android:id="@+id/timeline_color"
                android:layout_width="match_parent"
                android:minHeight="10dp"
                android:background="#ff0000"
                android:layout_height="wrap_content" />

            <RelativeLayout
                android:layout_below="@id/timeline_color"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp"
                android:background="@color/list_bg">

                <TextView
                    android:fontFamily="sans-serif-thin"
                    android:id="@+id/timeline_title"
                    android:textSize="50sp"
                    android:textColor="@color/text_primary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="title"
                    android:singleLine="true" />

                <TextView
                    android:layout_below="@id/timeline_title"
                    android:id="@+id/timeline_desc"
                    android:fontFamily="sans-serif-light"
                    android:textColor="@color/text_primary_dark"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:text="description" />

                <TextView
                    android:id="@+id/timeline_event_count"
                    android:fontFamily="sans-serif-light"
                    android:textColor="@color/empty_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/timeline_desc"
                    android:text="Total Events: 10" />
            </RelativeLayout>

            <ImageButton
                android:padding="8dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:id="@+id/timeline_list_item_menu_button"
                android:src="@drawable/abc_ic_menu_moreoverflow_mtrl_alpha"
                android:background="@android:color/transparent"
                android:tint="@color/text_primary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/card_edit_layout"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/alternate_dark">

            <FrameLayout
                android:id="@+id/timeline_edit_new_image"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:background="@android:color/transparent">

                <ImageView
                    android:layout_gravity="center"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@android:color/transparent"
                    android:src="@drawable/ic_action_new_picture_large" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="4dp"
                android:background="@android:color/holo_green_dark">

                <SeekBar
                    android:id="@+id/timeline_edit_color_slider"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </FrameLayout>


            <EditText
                android:padding="4dp"
                android:id="@+id/timeline_edit_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Title" />

            <EditText
                android:padding="4dp"
                android:id="@+id/timeline_edit_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lines="3"
                android:hint="Description" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:showDividers="middle"
                android:divider="?android:attr/dividerVertical"
                android:dividerPadding="5dp"
                android:layout_alignParentBottom="true">

                <Button
                    android:id="@+id/timeline_edit_negative_button"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    style="?android:attr/borderlessButtonStyle"
                    android:text="Delete" />

                <Button
                    android:id="@+id/timeline_edit_positive_button"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    style="?android:attr/borderlessButtonStyle"
                    android:fontFamily="sans-serif"
                    android:text="Save" />
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>
</android.support.v7.widget.CardView>